    25% { transform: rotateZ(-5deg); opacity: 1; }
    30% { transform: rotateZ(0); opacity: 1; }
    65% { transform: rotateZ(0); opacity: 1; }
    70% { transform: rotateZ(5deg); opacity: 1; }
    100% { transform: rotateZ(-90deg); opacity: 0; }
}
// 旋转进来，不出去
